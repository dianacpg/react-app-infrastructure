{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "noEmit": true, //just typecheck without emiting any output
    "isolatedModules": true, // forbid the features that require cross-file info
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./custom.d.ts"]
}
